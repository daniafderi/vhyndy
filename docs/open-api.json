{
    "openapi": "3.0.2",
    "info": {
        "title": "User API",
        "description": "User API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "paths": {
        "/api/users": {
            "post": {
                "description": "Register new user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "examples": {
                                "vindhy": {
                                    "description": "Register user vindhy",
                                    "value": {
                                        "username": "vindhy",
                                        "password": "rhs",
                                        "name": "hadi purwanto"
                                    }
                                }
                            },
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "name": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Succes register user",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number"
                                                },
                                                "username": {
                                                    "type": "string"
                                                },
                                                "name": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/login": {
            "post": {
                "description": "Login user"
            }
        },
        "/api/users/current": {
            "get": {
                "description": "Get user"
            },
            "patch": {
                "description": "Update user"
            }
        },
        "/api/users/logout": {
            "delete": {
                "description": "Logout user"
            }
        }
    }
}